<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Prof_Connecter">


    <Button
        android:id="@+id/button_second"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorAccent"
        android:fontFamily="@font/mapolice"
        android:text="@string/retour"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.151"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout3"
        app:layout_constraintVertical_bias="0.882" />

    <Button
        android:id="@+id/button_deconnexion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimary"
        android:fontFamily="@font/mapolice"
        android:text="@string/action_deconnexion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.877"
        app:layout_constraintStart_toEndOf="@+id/button_second"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout3"
        app:layout_constraintVertical_bias="0.882" />

    <TextView
        android:id="@+id/textview_ss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/mapolice"
        android:text="@string/monprofil"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.462"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.033" />


    <TextView
        android:id="@+id/textview_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mapolicegrand"
        android:text="NOM :  "
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_ss"
        app:layout_constraintVertical_bias="0.108" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="67dp"
        android:layout_height="107dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.121"
        app:srcCompat="@drawable/file" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout3"
        android:layout_width="364dp"
        android:layout_height="179dp"
        app:columnCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.638"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.077"
        app:rowCount="9">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mapolice"
            android:text="Nom : "
            app:layout_column="0"
            app:layout_row="0" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mapolice"
            android:text="Post Nom : "
            app:layout_column="0"
            app:layout_row="1" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mapolice"
            android:text="Prenom : "
            app:layout_column="0"
            app:layout_row="2" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mapolice"
            android:text="Adresse mail : "
            app:layout_column="0"
            app:layout_row="3" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mapolice"
            android:text="Téle : "
            app:layout_column="0"
            app:layout_row="4" />

        <TextView
            android:id="@+id/textView109"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mapolice"
            android:text="Adresse Physique "
            app:layout_column="0"
            app:layout_row="5" />

        <TextView
            android:id="@+id/textView119"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mapolice"
            android:text="Adresse Postale : "
            app:layout_column="0"
            app:layout_row="6" />

        <TextView
            android:id="@+id/textView129"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mapolice"
            android:text="Expertise : "
            app:layout_column="0"
            app:layout_row="7" />

        <TextView
            android:id="@+id/textView139"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mapolice"
            android:text="Ville d'Intervention "
            app:layout_column="0"
            app:layout_row="8" />


        <!--- les données -->

        <TextView
            android:id="@+id/nom"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mapolicegrand"
            android:text="Nom : "
            app:layout_column="1"
            app:layout_row="0" />

        <TextView
            android:id="@+id/postnom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mapolicegrand"
            android:text="Post Nom : "
            app:layout_column="1"
            app:layout_row="1" />

        <TextView
            android:id="@+id/prenom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mapolicegrand"
            android:text="Prenom : "
            app:layout_column="1"
            app:layout_row="2" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mapolicegrand"
            android:text="Adresse mail : "
            app:layout_column="1"
            app:layout_row="3" />

        <TextView
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mapolicegrand"
            android:text="Adresse Physique "
            app:layout_column="1"
            app:layout_row="4" />

        <TextView
            android:id="@+id/adrephysique"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mapolicegrand"
            android:text="Adresse Physique "
            app:layout_column="1"
            app:layout_row="5" />

        <TextView
            android:id="@+id/adrepostal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mapolicegrand"
            android:text="Adresse Postale "
            app:layout_column="1"
            app:layout_row="6" />

        <TextView
            android:id="@+id/expertise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mapolicegrand"
            android:text="Expertise : "
            app:layout_column="1"
            app:layout_row="7" />

        <TextView
            android:id="@+id/Ville_intervention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mapolicegrand"
            android:text="Null"
            app:layout_column="1"
            app:layout_row="8" />


    </androidx.gridlayout.widget.GridLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="351dp"

        android:layout_height="168dp"
        app:layout_constraintBottom_toTopOf="@+id/button_deconnexion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.947">

        <!-- Ajoutez d'autres vues comme TextView pour afficher les détails de l'ouvrier -->

        <TextView
            android:id="@+id/textview_ville_intervention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/mapolice"
            android:text="Villes d'intervention"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edittext_ville_intervention"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_ville_intervention"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/mapolice"
            android:hint="Entrez une ville d'intervention"
            android:inputType="text" />

        <Button
            android:id="@+id/button_ajouter_ville"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="130dp"
            android:layout_height="53dp"
            android:layout_below="@id/edittext_ville_intervention"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="19dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="202dp"
            android:layout_marginBottom="13dp"
            android:text="Ajouter" />

        <Button
            android:id="@+id/button_ajouter_photo"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="130dp"
            android:layout_height="53dp"
            android:layout_below="@id/edittext_ville_intervention"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="193dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="13dp"
            android:text="Mettre a jour" />

        <!-- Autres vues comme TextView pour afficher les détails -->

    </RelativeLayout>

    <ListView
        android:layout_width="365dp"
        android:layout_height="171dp"
        android:id="@+id/Ville_interventionList"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout3" />


</androidx.constraintlayout.widget.ConstraintLayout>